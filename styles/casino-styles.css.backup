/* AI Analysis Section */
.ai-analysis {
  background: linear-gradient(
    135deg,
    rgba(255, 107, 53, 0.1),
    rgba(255, 170, 0, 0.1)
  );
  border: 1px solid rgba(255, 107, 53, 0.3);
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  gap: 16px;
}

/* Animated background for analysis */
.ai-analysis::before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(255, 215, 0, 0.1) 0%,
    transparent 70%
  );
  animation: analysisPulse 4s ease-in-out infinite;
}

@keyframes analysisPulse {
  0%,
  100% {
    transform: rotate(0deg) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: rotate(180deg) scale(1.2);
    opacity: 0.8;
  }
}

.ai-icon {
  font-size: 32px;
  z-index: 1;
  animation: robotBounce 2s ease-in-out infinite;
}

@keyframes robotBounce {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5px);
  }
}

.roast-text {
  flex: 1;
  font-size: 15px;
  line-height: 1.5;
  color: #fff;
  font-style: italic;
  z-index: 1;
}

.score-badge {
  background: linear-gradient(45deg, #ffd700, #ffa500);
  color: #000;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 18px;
  font-weight: 800;
  box-shadow: 0 4px 12px rgba(255, 215, 0, 0.4);
  z-index: 1;
  animation: scorePulse 2s ease-in-out infinite;
}

@keyframes scorePulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* Score-based colors */
.ai-analysis.high-score {
  border-color: #00ff00;
  background: linear-gradient(
    135deg,
    rgba(0, 255, 0, 0.1),
    rgba(0, 200, 0, 0.1)
  );
}

.ai-analysis.high-score .score-badge {
  background: linear-gradient(45deg, #00ff00, #00cc00);
}

.ai-analysis.low-score {
  border-color: #ff4444;
  background: linear-gradient(
    135deg,
    rgba(255, 68, 68, 0.1),
    rgba(200, 0, 0, 0.1)
  );
}

.ai-analysis.low-score .score-badge {
  background: linear-gradient(45deg, #ff4444, #cc0000);
}

/* Action buttons */
.loadout-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  justify-content: center;
}

.copy-text-btn,
.copy-image-btn,
.roast-again-btn {
  flex: 1;
  min-width: 120px;
  padding: 12px 20px;
  background: linear-gradient(45deg, #7b2fe3, #1e90ff);
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  position: relative;
  overflow: hidden;
}

/* Button hover effects */
.copy-text-btn:hover,
.copy-image-btn:hover,
.roast-again-btn:hover {
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 5px 20px rgba(0, 212, 255, 0.5);
}

.copy-image-btn {
  background: linear-gradient(45deg, #00d4ff, #ff1493);
}

.roast-again-btn {
  background: linear-gradient(45deg, #ffb700, #ff6b35);
}

/* Success state */
.copy-text-btn.success,
.copy-image-btn.success {
  background: linear-gradient(45deg, #00ff00, #00cc00);
  animation: successPulse 0.6s ease;
}

@keyframes successPulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

/* Legendary loadout animation */
.history-entry.legendary {
  animation: legendaryPulse 3s ease-in-out infinite;
}

@keyframes legendaryPulse {
  0%,
  100% {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), 0 0 20px rgba(255, 215, 0, 0.6),
      0 0 40px rgba(255, 107, 53, 0.4);
  }
  50% {
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5), 0 0 40px rgba(255, 215, 0, 0.8),
      0 0 80px rgba(255, 107, 53, 0.6);
  }
}

/* Mobile optimizations */
@media (max-width: 768px) {
  .history-entry {
    margin: 12px 8px;
    border-radius: 12px;
  }

  .casino-history-card {
    padding: 16px;
  }

  .loadout-header {
    gap: 8px;
  }

  .loadout-name {
    font-size: 18px;
  }

  .loadout-details {
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .item-icon {
    width: 40px;
    height: 40px;
  }

  .item-name {
    font-size: 14px;
  }

  .gadget-list {
    flex-direction: column;
  }

  .gadget-item {
    min-width: unset;
  }

  .ai-analysis {
    flex-direction: column;
    text-align: center;
    gap: 12px;
    padding: 16px;
  }

  .roast-text {
    font-size: 14px;
  }

  /* Ensure 48px touch targets */
  .copy-text-btn,
  .copy-image-btn,
  .roast-again-btn {
    min-height: 48px;
    min-width: 48px;
    font-size: 14px;
    padding: 12px 16px;
  }

  .loadout-actions {
    flex-direction: column;
  }

  .loadout-actions button {
    width: 100%;
  }
}

/* Loading state animations */
.ai-analysis.loading .roast-text {
  opacity: 0.7;
}

.spinner {
  display: inline-block;
  width: 14px;
  height: 14px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #ffd700;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Particle effects for interactions */
@keyframes particleBurst {
  0% {
    transform: translate(0, 0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(var(--x), var(--y)) scale(0);
    opacity: 0;
  }
}

/* Add custom particle variables via JS on click */
.particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: #ffd700;
  border-radius: 50%;
  pointer-events: none;
  animation: particleBurst 0.6s ease-out forwards;
}

/* Enhanced visual effects for history entries */
.history-entry.visible {
  animation: slideInRight 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes slideInRight {
  0% {
    opacity: 0;
    transform: translateX(50px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Glowing border animation */
@keyframes border-glow {
  0%,
  100% {
    opacity: 0.3;
  }
  50% {
    opacity: 0.8;
  }
}

/* Button ripple effect */
.copy-text-btn::after,
.copy-image-btn::after,
.roast-again-btn::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%);
  transform-origin: 50% 50%;
}

.copy-text-btn:focus:not(:active)::after,
.copy-image-btn:focus:not(:active)::after,
.roast-again-btn:focus:not(:active)::after {
  animation: ripple 1s ease-out;
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 1;
  }
  20% {
    transform: scale(25, 25);
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: scale(40, 40);
  }
}

/* Fallback state styling */
.ai-analysis.fallback {
  background: linear-gradient(
    135deg,
    rgba(255, 68, 68, 0.2),
    rgba(200, 0, 0, 0.2)
  );
  border-color: #ff4444;
}

/* Spicy loadout badge animation */
.history-entry.spicy-loadout::after {
  content: "🔥";
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 24px;
  animation: fireAnimation 2s ease-in-out infinite;
}

@keyframes fireAnimation {
  0%,
  100% {
    transform: scale(1) rotate(0deg);
  }
  25% {
    transform: scale(1.1) rotate(-5deg);
  }
  75% {
    transform: scale(0.9) rotate(5deg);
  }
}

/* History Cards - Full Casino Style */
.loadout-history {
  background: transparent !important;
}

.loadout-history h2 {
  color: var(--finals-yellow);
  text-transform: uppercase;
  font-family: "Bebas Neue", Impact, sans-serif;
  font-size: 2rem;
  letter-spacing: 0.1em;
  text-shadow: 0 0 10px rgba(255, 229, 0, 0.5);
}

/* History Card Styling */
article.loadout {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border: 3px solid var(--finals-gold);
  border-radius: 15px;
  box-shadow: 0 0 30px rgba(255, 215, 0, 0.2), inset 0 0 20px rgba(0, 0, 0, 0.5);
  margin-bottom: 20px;
  overflow: hidden;
  transition: all 0.3s ease;
}

article.loadout:hover {
  transform: translateY(-2px);
  box-shadow: 0 0 40px rgba(255, 215, 0, 0.3), inset 0 0 20px rgba(0, 0, 0, 0.5);
}

.loadout header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  background: rgba(0, 0, 0, 0.3);
  border-bottom: 2px solid rgba(255, 215, 0, 0.3);
}

.loadout .class-badge {
  background: var(--gradient-gold-shine);
  color: #000;
  padding: 5px 15px;
  border-radius: 20px;
  font-weight: bold;
  text-transform: uppercase;
  font-size: 0.9rem;
  letter-spacing: 0.05em;
}

.loadout .loadout-copy-btn {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.loadout .loadout-copy-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(1.05);
}

.loadout .loadout-content {
  padding: 20px;
}

.loadout .loadout-grid {
  display: grid;
  gap: 10px;
  margin-bottom: 15px;
}

.loadout .grid-item label {
  color: #888;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.loadout .grid-item span {
  color: white;
  font-size: 1.1rem;
  font-weight: 600;
}

.loadout .gadgets-list {
  display: flex;
  gap: 10px;
  margin-top: 5px;
}

.loadout .gadget-item {
  background: rgba(255, 255, 255, 0.1);
  padding: 5px 12px;
  border-radius: 15px;
  font-size: 0.9rem;
}

.loadout .ai-analysis {
  background: rgba(0, 0, 0, 0.3);
  border: 2px solid var(--finals-orange);
  border-radius: 10px;
  padding: 15px;
  margin-top: 15px;
  position: relative;
}

.loadout .ai-analysis .roast-text {
  color: #fff;
  font-style: italic;
  margin: 0;
  line-height: 1.5;
}

.loadout .score-badge {
  position: absolute;
  top: -12px;
  right: 15px;
  background: var(--gradient-orange-pink);
  color: white;
  padding: 5px 15px;
  border-radius: 20px;
  font-weight: bold;
  font-size: 0.9rem;
}

/* Slot Machine Golden Borders */
.casino-mode .item-container {
  border: 3px solid var(--finals-gold) !important;
  box-shadow: 0 0 20px rgba(255, 215, 0, 0.3),
    inset 0 0 10px rgba(255, 215, 0, 0.1);
}

.casino-mode .item-container.winning {
  animation: golden-pulse 1.5s ease-in-out infinite;
}

@keyframes golden-pulse {
  0%,
  100% {
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.3);
  }
  50% {
    box-shadow: 0 0 40px rgba(255, 215, 0, 0.6);
  }
}

/* Desktop-specific adjustments for tighter slot spacing */
@media (min-width: 769px) {
  .items-container {
    gap: 8px !important;
  }

  /* Overlay-specific desktop adjustments */
  .slot-machine-overlay .items-container {
    gap: 8px !important;
    padding: 20px 15px !important;
  }
}

:root {
  --gradient-gold-shine: linear-gradient(
    90deg,
    #ffd700 0%,
    #fffbe7 50%,
    #ffd700 100%
  );
  --text-glow: 0 0 8px #ffd700, 0 0 2px #fffbe7;
}
