/* Casino Zone Styles - Full Effects */
/* @import url("variables-casino.css"); -- File doesn't exist, using inline variables */

/* Base Styles */
body.casino-mode {
  background: linear-gradient(135deg, #1b1b3a, #34003d, #240049, #003d66);
  background-attachment: fixed;
  color: var(--text-primary);
  overflow-x: hidden;
  min-height: 100vh;
}

/* Spin Button - Maximum Impact */
.main-spin-button {
  background: linear-gradient(135deg, #ff6b35 0%, #ff1744 50%, #ff6b35 100%);
  color: white;
  font-family: "Bebas Neue", Impact, sans-serif;
  font-size: 1.8rem;
  font-weight: 900;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  padding: 1.2rem 3rem;
  border: 3px solid #ffd700;
  border-radius: 16px;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  box-shadow: 0 0 30px rgba(255, 107, 53, 0.8), 0 0 60px rgba(255, 23, 68, 0.6),
    0 8px 20px rgba(0, 0, 0, 0.4), inset 0 0 20px rgba(255, 215, 0, 0.2);
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.9),
    0 0 20px rgba(255, 215, 0, 0.7), 2px 2px 4px rgba(0, 0, 0, 0.8);
  animation: pulseGlow 2s infinite;
  transform: scale(1);
  transition: all 200ms ease-out;
  display: block;
  margin: 2rem auto;
  text-align: center;
  min-width: 320px;
}

.main-spin-button:hover {
  transform: scale(1.1);
  background: linear-gradient(135deg, #ff8e53 0%, #ff3366 50%, #ff8e53 100%);
  border-color: #fff;
  box-shadow: 0 0 40px rgba(255, 107, 53, 1), 0 0 80px rgba(255, 23, 68, 0.8),
    0 10px 30px rgba(0, 0, 0, 0.5), inset 0 0 30px rgba(255, 255, 255, 0.3);
}

.main-spin-button:active {
  transform: scale(0.98);
  box-shadow: 0 0 20px rgba(255, 107, 53, 0.8), 0 0 40px rgba(255, 23, 68, 0.6),
    0 4px 15px rgba(0, 0, 0, 0.4), inset 0 0 15px rgba(255, 215, 0, 0.4);
}

/* Pulse Glow Animation */
@keyframes pulseGlow {
  0%,
  100% {
    box-shadow: 0 0 30px rgba(255, 107, 53, 0.8),
      0 0 60px rgba(255, 23, 68, 0.6), 0 8px 20px rgba(0, 0, 0, 0.4),
      inset 0 0 20px rgba(255, 215, 0, 0.2);
  }
  50% {
    box-shadow: 0 0 40px rgba(255, 107, 53, 1), 0 0 80px rgba(255, 23, 68, 0.8),
      0 10px 25px rgba(0, 0, 0, 0.5), inset 0 0 25px rgba(255, 215, 0, 0.3);
  }
}

/* Desktop-specific button sizing */
@media (min-width: 769px) {
  .main-spin-button {
    font-size: 2.2rem !important;
    padding: 1.4rem 3.5rem !important;
    min-width: 360px !important;
    height: auto !important;
    width: auto !important;
    border-radius: 20px;
  }

  .main-spin-button:hover {
    transform: scale(1.12);
  }
}

/* Slot Machine Container */
.slot-machine-wrapper {
  background: radial-gradient(
    ellipse at center,
    rgba(255, 107, 53, 0.1),
    transparent
  );
  padding: 2rem;
  border-radius: 16px;
  position: relative;
}

.slot-machine-wrapper::before {
  content: "";
  position: absolute;
  inset: -2px;
  background: var(--gradient-cyan-purple);
  border-radius: 16px;
  opacity: 0.3;
  z-index: -1;
  animation: border-glow 3s ease-in-out infinite;
}

/* Slot Reels */
.item-container {
  background: var(--gradient-cyber);
  border: 2px solid rgba(255, 107, 53, 0.3);
  border-radius: 12px;
  box-shadow: inset 0 0 20px rgba(0, 212, 255, 0.2), var(--slot-shadow);
  overflow: hidden;
  position: relative;
}

.item-container.spinning {
  animation: container-shake 0.5s ease-in-out;
}

.item-container.locked {
  border-color: var(--finals-gold);
  box-shadow: inset 0 0 30px rgba(255, 215, 0, 0.3), var(--gold-shadow);
}

/* Blur Effects for Speed */
.high-speed-blur .itemCol {
  filter: blur(3px);
}

.extreme-blur .itemCol {
  filter: blur(8px);
  opacity: 0.7;
}

/* Winner Celebration */
.winner-pulsate {
  animation: winner-pulse 1.5s ease-in-out infinite;
}

@keyframes winner-pulse {
  0%,
  100% {
    box-shadow: var(--gold-shadow);
    transform: scale(1);
  }
  50% {
    box-shadow: var(--extreme-glow) var(--finals-gold);
    transform: scale(1.02);
  }
}

/* Celebration Effects */
.celebration-banner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 1000;
  pointer-events: none;
}

.banner-text {
  font-family: "Bebas Neue", Impact, sans-serif;
  font-size: 4rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  background: var(--gradient-gold-shine);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: var(--extreme-glow) var(--finals-gold);
  animation: celebration-zoom 0.8s var(--bounce-timing);
}

/* Particle Effects */
.lock-in-particle {
  position: fixed;
  pointer-events: none;
  z-index: 10000;
  width: 8px;
  height: 8px;
  background: var(--gradient-gold-shine);
  border-radius: 50%;
  box-shadow: var(--neon-glow) var(--particle-gold);
}

/* Floating Text */
.floating-celebration-text {
  position: absolute;
  font-family: "Bebas Neue", Impact, sans-serif;
  font-size: 2rem;
  font-weight: bold;
  color: var(--finals-gold);
  text-shadow: var(--text-glow) var(--finals-gold);
  animation: float-up 2s ease-out forwards;
  pointer-events: none;
}

/* Animations */
@keyframes pulse {
  0%,
  100% {
    box-shadow: var(--neon-glow) var(--finals-orange);
  }
  50% {
    box-shadow: var(--deep-glow) var(--finals-orange);
  }
}

@keyframes spin-rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes border-glow {
  0%,
  100% {
    opacity: 0.3;
  }
  50% {
    opacity: 0.6;
  }
}

@keyframes container-shake {
  0%,
  100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-5px);
  }
  75% {
    transform: translateX(5px);
  }
}

@keyframes tag-bounce {
  0% {
    transform: translateY(-100%) scale(0.8);
  }
  50% {
    transform: translateY(10px) scale(1.1);
  }
  100% {
    transform: translateY(0) scale(1);
  }
}

@keyframes celebration-zoom {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

@keyframes float-up {
  0% {
    transform: translateY(0) scale(0);
    opacity: 0;
  }
  20% {
    transform: translateY(-20px) scale(1);
    opacity: 1;
  }
  100% {
    transform: translateY(-100px) scale(0.8);
    opacity: 0;
  }
}

/* Screen Shake for Drama */
body.screen-shake {
  animation: screen-shake 0.6s ease-in-out;
}

@keyframes screen-shake {
  0%,
  100% {
    transform: translate(0, 0);
  }
  10% {
    transform: translate(-2px, -2px);
  }
  20% {
    transform: translate(2px, -2px);
  }
  30% {
    transform: translate(-2px, 2px);
  }
  40% {
    transform: translate(2px, 2px);
  }
  50% {
    transform: translate(-1px, -1px);
  }
}

/* Mobile Optimizations */
@media (max-width: 768px) {
  :root {
    --slot-gap: 8px; /* single source of truth */
  }

  .main-spin-button {
    font-size: 1.4rem;
    padding: 0.8rem 1.6rem;
  }

  /* Reduce particles on mobile */
  .lock-in-particle {
    display: none;
  }

  /* Simplified effects */
  .extreme-blur .itemCol {
    filter: blur(4px);
  }

  .items-container {
    gap: var(--slot-gap);
  }

  .item-container {
    flex: 0 1 calc((100% - 4 * var(--slot-gap)) / 5);
    width: auto; /* width now comes from flex-basis */
    max-width: 80px; /* safety stop so cards never get massive on tablets */
    height: auto; /* preserve ratio with aspect-ratio below */
    aspect-ratio: 3 / 4; /* keeps visual proportions without magic numbers */
  }

  .item-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Cancel winner-pulse animation on mobile */
  .item-container.winner,
  .item-container:has(.winner-animation) {
    animation: none !important;
    transform: none !important;
  }

  /* Mobile Header Centering */
  .headerSection {
    padding: 1rem 0;
    text-align: center;
  }

  .headerSection .container {
    max-width: 100%;
    padding: 0 1rem;
  }

  .finals-logo-mobile {
    margin: 0 auto 0.5rem auto;
    width: 120px;
    height: auto;
  }

  .subTitle-mobile {
    margin: 0 auto 0.5rem auto;
    font-size: 1.5rem;
  }

  .season-update-notice {
    margin: 0 auto;
    font-size: 0.9rem;
    color: white;
  }

  /* Mobile Main Content Centering */
  .container {
    padding: 0 0.5rem;
  }

  .selection-container {
    max-width: 100%;
  }

  .btnRow {
    gap: 1rem;
  }

  .spin-control {
    margin: 1rem auto;
  }

  /* Mobile Spin Button */
  .main-spin-button {
    font-size: 1.3rem;
    padding: 0.7rem 1.4rem;
    margin: 0 auto;
  }

  .gadget-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start !important;
    padding-left: 0 !important;
  }
  .gadget-item .item-name {
    text-align: left !important;
    width: 100%;
  }
}

@media (max-width: 480px) {
  .locked-tag {
    white-space: nowrap;
    transform: translateY(-100%) translateX(-50%);
    left: 50%;
    right: auto;
    top: -7px;
  }

  .locked-tag.show {
    transform: translateY(3px) translateX(-50%);
    animation: tag-bounce-mobile 0.6s var(--bounce-timing);
  }

  @keyframes tag-bounce-mobile {
    0% {
      transform: translateY(-100%) translateX(-50%) scale(0.8);
    }
    50% {
      transform: translateY(13px) translateX(-50%) scale(1.1);
    }
    100% {
      transform: translateY(3px) translateX(-50%) scale(1);
    }
  }
}

/* Low Performance Mode */
body.low-performance-mode .lock-in-particle,
body.low-performance-mode .floating-celebration-text {
  display: none;
}

body.low-performance-mode * {
  animation-duration: 0.5s !important;
}

/* Casino Navigation */
.main-nav {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 2px solid var(--finals-orange);
  box-shadow: 0 4px 20px rgba(255, 107, 53, 0.3);
}

.main-nav a {
  color: var(--text-primary);
  text-decoration: none;
  font-weight: bold;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  transition: all 200ms var(--bounce-timing);
  position: relative;
}

.main-nav a:hover {
  color: var(--finals-gold);
  text-shadow: var(--text-glow) var(--finals-gold);
  transform: translateY(-2px);
}

.main-nav a::after {
  content: "";
  position: absolute;
  bottom: -2px;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--gradient-orange-pink);
  transition: all 300ms var(--bounce-timing);
  transform: translateX(-50%);
}

.main-nav a:hover::after {
  width: 100%;
}

/* Casino Header */
.headerSection {
  background: radial-gradient(
    ellipse at center,
    rgba(255, 107, 53, 0.1),
    transparent
  );
  padding: 2rem 0;
  position: relative;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.headerSection .container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  max-width: 600px;
  margin: 0 auto;
  position: relative;
}

.headerSection::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--gradient-cyber);
  opacity: 0.1;
  z-index: -1;
}

.finals-logo-mobile {
  filter: drop-shadow(var(--neon-glow) var(--finals-orange));
  display: block;
  margin: 0 auto 1rem auto;
  text-align: center;
}

.subTitle-mobile {
  background: linear-gradient(
    135deg,
    #e8e8e8 0%,
    #ffffff 15%,
    #d4a5ff 35%,
    #ffffff 50%,
    #c79dff 65%,
    #ffffff 85%,
    #b8b8b8 100%
  );
  background-size: 300% 300%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  color: transparent;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  text-align: center;
  margin: 0 auto 1rem auto;
  display: block;
  position: relative;
  animation: metallic-shine 3s ease-in-out infinite;
}

@keyframes metallic-shine {
  0%,
  100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

.season-update-notice {
  text-align: center;
  margin: 0 auto;
  display: block;
  color: white;
  font-weight: bold;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.6), 0 2px 4px rgba(0, 0, 0, 0.8);
}

/* Main Content Centering */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.selection-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
}

.btnRow {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  margin: 0 auto;
}

.spin-control {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin: 2rem auto;
  width: 100%;
}

/* Filter Panel - Hidden by default */
#filter-panel {
  position: fixed;
  top: 0;
  right: -400px;
  width: 400px;
  max-width: 90vw;
  height: 100vh;
  background: linear-gradient(
    180deg,
    rgba(20, 20, 20, 0.98) 0%,
    rgba(10, 10, 10, 0.98) 100%
  );
  border-left: 2px solid rgba(255, 107, 53, 0.3);
  z-index: 10000;
  transition: right 0.3s ease;
  overflow-y: auto;
  overflow-x: hidden;
  display: none !important;
}

/* Active state - slide in */
#filter-panel.active {
  right: 0;
  box-shadow: -10px 0 30px rgba(0, 0, 0, 0.5);
  display: block !important;
}

/* Ensure it's hidden on page load */
body.casino-mode #filter-panel:not(.active) {
  display: none !important;
  right: -400px !important;
  visibility: hidden !important;
  opacity: 0 !important;
}

/* Filter overlay (darkens background) */
#filter-panel-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease;
}

#filter-panel-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* SLOT MACHINE - Horizontal Layout */
#output {
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

/* Slot machine container */
.slot-machine-wrapper {
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
}

.items-container {
  display: flex !important;
  flex-direction: row !important;
  justify-content: center;
  align-items: center;
  gap: 15px;
  padding: 2rem 1rem;
}

/* Individual slot boxes */
.item-container {
  flex: 0 1 150px;
  width: 150px;
  height: 200px;
  overflow: hidden;
  position: relative;
  background: var(--gradient-cyber);
  border: 3px solid var(--finals-gold);
  border-radius: 10px;
  box-shadow: inset 0 0 20px rgba(0, 212, 255, 0.2), var(--slot-shadow);
}

/* Hide overflow - only show one item at a time */
.scroll-container {
  position: absolute;
  width: 100%;
  transition: transform 0.5s ease;
}

/* Items should be stacked vertically inside container */
.itemCol {
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1rem;
}

.itemCol img {
  max-width: 80px;
  max-height: 80px;
  object-fit: contain;
}

.itemCol p {
  margin: 0.5rem 0 0 0;
  font-size: 0.8rem;
  text-align: center;
  color: var(--text-primary);
  font-weight: bold;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .items-container {
    gap: 10px;
  }

  .item-container {
    flex: 0 1 60px;
    width: 60px;
    height: 80px;
  }

  .itemCol {
    height: 80px;
    padding: 0.5rem;
  }

  .itemCol img {
    max-width: 40px;
    max-height: 40px;
  }

  .itemCol p {
    font-size: 0.6rem;
    margin: 0.25rem 0 0 0;
  }
}

/* Mobile Sound Toggle in Header */
.sound-toggle-button.mobile-sound-toggle {
  position: absolute;
  top: 1rem;
  right: 1rem;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
  border: 1px solid var(--finals-orange);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--finals-orange);
  cursor: pointer;
  transition: all 0.3s ease;
}

.sound-toggle-button.mobile-sound-toggle:hover {
  background: rgba(255, 107, 53, 0.2);
  transform: scale(1.1);
}

.sound-toggle-button.mobile-sound-toggle.muted {
  color: #ff4444;
  border-color: #ff4444;
}

/* Text-Only History Cards - New Design */
.loadout-history {
  width: 100%;
  max-width: 900px;
  margin: 2rem auto;
  padding: 0 1rem;
  text-align: center;
}

.loadout-history h2 {
  background: var(--gradient-gold-shine);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: var(--text-glow) var(--finals-gold);
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 1rem;
  text-align: center;
}

.chaos-counter {
  color: var(--finals-orange);
  font-weight: bold;
  margin-bottom: 2rem;
  text-align: center;
}

#history-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-bottom: 2rem;
  align-items: center;
}

/* New Text-Only History Entry */
.history-entry {
  width: 100%;
  max-width: 900px;
  background: linear-gradient(
    135deg,
    rgba(26, 26, 26, 0.95) 0%,
    rgba(42, 42, 42, 0.95) 100%
  );
  border: 2px solid rgba(255, 107, 53, 0.3);
  border-radius: 12px;
  padding: 1.5rem;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  text-align: center;
}

.history-entry:hover {
  border-color: rgba(255, 107, 53, 0.5);
  box-shadow: 0 8px 24px rgba(255, 107, 53, 0.2);
  transform: translateY(-2px);
}

/* Class-specific border colors */
.history-entry[data-class="light"] {
  border-left: 4px solid #00f3ff;
}

.history-entry[data-class="medium"] {
  border-left: 4px solid #ff00ff;
}

.history-entry[data-class="heavy"] {
  border-left: 4px solid #ffaa00;
}

/* History Card Content */
.history-card-content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: center;
}

/* Class Badge */
.class-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-weight: 600;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
}

.class-badge.light {
  background: linear-gradient(135deg, #00f3ff, #00b3ff);
  color: #000;
  box-shadow: 0 0 10px rgba(0, 243, 255, 0.5);
}

.class-badge.medium {
  background: linear-gradient(135deg, #ff00ff, #ff0080);
  color: #fff;
  box-shadow: 0 0 10px rgba(255, 0, 255, 0.5);
}

.class-badge.heavy {
  background: linear-gradient(135deg, #ffaa00, #ff6600);
  color: #000;
  box-shadow: 0 0 10px rgba(255, 170, 0, 0.5);
}

/* Loadout Items Container */
.loadout-items {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  width: 100%;
  max-width: 600px;
  margin: 0 auto;
}

/* Individual Item Boxes */
.loadout-item-box {
  background: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 0.75rem 1rem;
  text-align: center;
  transition: all 0.2s ease;
}

.loadout-item-box:hover {
  background: rgba(0, 0, 0, 0.4);
  border-color: rgba(255, 107, 53, 0.3);
}

.loadout-item-label {
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--finals-orange);
  margin-bottom: 0.25rem;
  display: block;
}

.loadout-item-value {
  font-size: 1rem;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
}

/* Analysis Section */
.analysis-section {
  background: linear-gradient(
    135deg,
    rgba(255, 107, 53, 0.1),
    rgba(255, 170, 0, 0.1)
  );
  border: 1px solid rgba(255, 107, 53, 0.2);
  border-radius: 8px;
  padding: 1rem;
  margin: 1rem 0;
  text-align: left;
}

.analysis-label {
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--finals-orange);
  margin-bottom: 0.5rem;
  display: block;
}

.analysis-text {
  font-size: 0.9rem;
  color: var(--text-primary);
  line-height: 1.4;
  font-style: italic;
}

/* Action Buttons */
.history-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin-top: 1rem;
  flex-wrap: wrap;
}

.history-action-btn {
  background: var(--gradient-orange-pink);
  color: white;
  border: none;
  border-radius: 6px;
  padding: 0.75rem 1.5rem;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: var(--neon-glow) var(--finals-orange);
}

.history-action-btn:hover {
  transform: translateY(-1px);
  box-shadow: var(--deep-glow) var(--finals-orange);
}

.history-action-btn:active {
  transform: translateY(0);
}

/* Clear History Button */
.clear-history-btn {
  background: linear-gradient(135deg, #ff4444, #cc0000);
  color: white;
  border: none;
  border-radius: 8px;
  padding: 1rem 2rem;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: 0 0 10px rgba(255, 68, 68, 0.3);
  margin-top: 1rem;
}

.clear-history-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 0 15px rgba(255, 68, 68, 0.5);
}

.clear-history-btn:active {
  transform: translateY(0);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .loadout-history {
    padding: 0 0.5rem;
    margin: 1rem auto;
  }

  .loadout-history h2 {
    font-size: 1.5rem;
  }

  .history-entry {
    padding: 1rem;
    border-radius: 10px;
  }

  .loadout-items {
    max-width: 100%;
  }

  .loadout-item-box {
    padding: 0.5rem 0.75rem;
  }

  .loadout-item-label {
    font-size: 0.7rem;
  }

  .loadout-item-value {
    font-size: 0.9rem;
  }

  .analysis-section {
    padding: 0.75rem;
  }

  .analysis-text {
    font-size: 0.85rem;
  }

  .history-actions {
    flex-direction: column;
    gap: 0.75rem;
  }

  .history-action-btn {
    padding: 0.75rem 1rem;
    font-size: 0.8rem;
  }

  .clear-history-btn {
    padding: 0.75rem 1.5rem;
    font-size: 0.9rem;
  }
}

